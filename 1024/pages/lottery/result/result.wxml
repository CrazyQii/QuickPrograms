<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">答题结果</view>
</cu-custom>

<view class="padding flex flex-direction margin-top-xl">
  <!-- 可以抽奖 -->
  <view wx:if="{{ lottery.drawFlag == 1 }}" class="flex-sub text-center">
    <view class="flex-sub text-center">
      <view class="text-xl text-black text-bold padding text-orange">本次获得积分</view>
      <view class="solid-bottom text-xxl padding">
        <text class="text-orange">{{ lottery.grade }} 分</text>
      </view>
    </view>
    <view class="padding flex flex-direction margin-top-xl">
      <button class="cu-btn bg-red lg" bindtap="toLottery">开始抽奖</button>
    </view>
    
  </view>

  <!-- 不可以抽奖 -->
  <view wx:else class="flex-sub text-center">
    <view class="flex-sub text-center">
      <view class="text-xl text-black text-bold padding text-orange">本次获得积分</view>
      <view class="solid-bottom text-xxl padding">
        <text class="text-orange">{{ lottery.grade }} 分</text>
      </view>
    </view>
    <view class="text-xl text-black text-bold padding margin-top-xl">
      <view>很遗憾，您没有获得抽奖机会</view>
      <view class="margin-top-df">请再接再厉!!!</view>
    </view>
    <view class="padding flex flex-direction margin-top-xl">
      <button class="cu-btn bg-green lg" bindtap="toIndex">返回首页</button>
    </view>
  </view>
</view>
