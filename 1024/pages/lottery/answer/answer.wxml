<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">闯关答题</view>
</cu-custom>


<!-- 倒计时 -->
<view class="cu-bar bg-white margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>剩余时间: <text class="text-center {{ leftTime <= 10? 'text-red': '' }} {{ scaleDown ? 'animation-scale-down': ''}}">{{ leftTime }} 秒</text>
  </view>
</view>
<view class="padding bg-white flex">
  <view class="cu-progress round sm striped active">
    <view class="bg-green" style="width: {{ leftTime / fullTime * 100 + '%'}}">{{ leftTime }}</view>
  </view>
</view>

