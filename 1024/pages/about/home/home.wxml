<!-- 主体页面 -->
<view class="UCenter-bg bg-brown">
    <image src="{{ userInfo.avatar }}" class="png round" mode="widthFix"></image>
    <view class="text-xl margin-top">{{ userInfo.nickname }}</view>
    <image src="/images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
</view>

<view class="padding flex text-center text-grey bg-white shadow-warp">
  <view class="flex flex-sub flex-direction">
    <view class="text-xl text-olive">当前积分：{{ userLevel.grade }}</view>
    <view class="margin-top-sm text-xl">
      <text class="cuIcon-upstage text-orange margin">{{ userLevel.levelName }}</text>
    </view>
  </view>
</view>

<!-- 步骤条 -->
<scroll-view scroll-x class="bg-white padding response cu-steps steps-bottom" scroll-into-view="scroll-{{ userLevel.grade }}" scroll-with-animation>
  <view class="cu-item {{item.grade <= userLevel.grade ? 'text-blue' : ''}} padding-lr-xl" wx:for="{{ level }}" wx:key="index" id="scroll-{{index}}">
  {{ item.name }} 
  <!-- <image style="width: 50rpx; height: 50rpx;"></image> -->
  <text class="num" data-index="{{index + 1}}"></text>
  </view>
</scroll-view>

<!-- 我的背包 -->
<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
  <view class="cu-item arrow">
    <navigator class="content" url="/pages/about/record/record" hover-class="none">
      <text class="cuIcon-goods text-gray"></text>
      <text class="text-grey">我的背包</text>
    </navigator>
  </view>
</view>

<!-- 抽奖模块  -->
<view class="padding-sm" >
  <view class="bg-gradual-orange padding radius text-center shadow-blur" wx:if="{{ !isOpenBigAward }}">
    <view class="text-lg">大奖抽奖时间</view>
    <view class="margin-top-xl  text-xl text-bold">开始时间：{{ startTime }}</view>
    <view class="margin-top-xl  text-xl text-bold">结束时间：{{ endTime }}</view>
  </view>

  <!-- 抽奖按钮 -->
  <view class="padding flex flex-direction" wx:else>
    <button class="cu-btn bg-red margin-tb-sm lg" style="height: 200rpx;" bindtap="lottery">开启最终大奖</button>
  </view>
</view>

<view class='cu-tabbar-height'></view>


